<VAST xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="vast.xsd" version="3.0">
  <Ad id="1234567">
    <InLine>
      <AdSystem>GDFP</AdSystem>
      <AdTitle>SIMID survey_clickable</AdTitle>
      <Description>SIMID survey</Description>
      <Creatives>
        <Creative sequence="1">
          <Linear>
            <Duration>00:01:00</Duration>
            <AdParameters>
              {
                "surveyid":"${surveyid}",
                "vid":"${vid}",
                "identifer":"${identifer}",
                "vpos":"${vpos}",
                "platform":"${platform}"
